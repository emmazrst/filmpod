<div class="task-show-main-container">
  <div class="task-show-container">
    <div class="inner-task-show-container">

        <div class="task-show-title">
          <div class ="task-show-title-sub">
            <h2> <%= @submission.title.capitalize %> </h2>
          </div>
          <div class ="task-show-title-sub">
            <div class = "task-show-edit">
              <%= link_to 'Edit', edit_submission_path(@submission), class: "task-show-title-sub-link" %>
            </div>
            <div class = "task-show-delete">
              <%= link_to 'Delete',submission_path(action: :delete,id: @submission.id),method: :delete, data: {confirm: "Are you sure?"}, class: "task-show-title-sub-link" %>
            </div>
          </div>
        </div>

        <div class="task-show-task-type">
          <div class="task-show-label">
            <p> ðŸ“… Submission date </p>
          </div>
          <div class="task-show-value">
            <p> 10 December 2021 </p>
          </div>
        </div>

        <div class="task-show-task-type">
          <div class="task-show-label">
            <p> ðŸ¤” Status </p>
          </div>
          <div class="task-show-value">
            <% status =  @submission.status %>
              <% todo =  "to-do" %>
              <% inprogress =  "in-progress" %>
              <% submitted =  "submitted" %>
              <% approved =  "approved" %>
            <% case status %>
              <% when todo %>
                <p> <%= @submission.status  %>  ðŸ”´</p>
              <% when inprogress %>
                <p> <%= @submission.status  %>  ðŸŸ  </p>
              <% when submitted %>
                <p> <%= @submission.status  %>  ðŸŸ£ </p>
              <% when approved %>
                <p> <%= @submisison.status  %>  ðŸŸ¢ </p>
              <% else %>
                <p> <%= @submission.status  %> </p>
            <%end%>
          </div>
        </div>

        <div class="task-show-task-type">
          <div class="task-show-label">
            <p> ðŸ‘¤ Submitted by  </p>
          </div>
          <div class="task-show-value">
            <p> <%= @submission.user.first_name.capitalize %> </p>
          </div>
        </div>

        <div class="task-show-task-type">
          <div class="task-show-label">
            <p> ðŸ–‡ Description </p>
          </div>
          <div class="task-show-value content-box">
          </div>
        </div>
        <div class = "description-box">
          <div class="task-show-value content-box">
            <% if @submission.content == "" %>
              <p><em> Add a description </em> </p>
            <% else %>
              <%= @submission.content %>
              <%end%>
            </p>
          </div>
        </div>

        <div class = "container-comments-section"
          data-controller="submission-subscription"
          data-submission-subscription-submission-id-value="<%= @submission.id
          %>" >
          <% @submission.comments.each do |comment| %>
            <%= render "comments/comment", comment: comment %>
          <% end %>
        </div>

        <div>
          <%= simple_form_for [@submission, @comments], remote: true do |f| %>
            <%= f.input :content, label: false, placeholder: "Comment ##{@submission.title}" %>
            <%= f.submit %>
          <% end %>
        </div>


   </div>
  </div>
</div>
