<div class="container">
  <div class="row justify-content-center">
    <div class="new-submission-card-container">
      <div class="new-submission-card">
        <h3> New Submission</h3>
          <%= simple_form_for ([@task, @submission]) do |f| %>
            <%= f.input :title %>
            <%= f.input :content %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: "new-film-btn" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
